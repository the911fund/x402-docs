{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alpha Sentiment Response",
  "description": "Response from GET /alpha/sentiment",
  "type": "object",
  "required": ["query", "data", "payment", "timestamp"],
  "properties": {
    "query": { "type": "string" },
    "data": {
      "type": "object",
      "required": ["tweetsAnalyzed", "sentimentAnalysis"],
      "properties": {
        "tweetsAnalyzed": { "type": "integer" },
        "totalLikes": { "type": "integer" },
        "totalRetweets": { "type": "integer" },
        "samples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "likes": { "type": "integer" },
              "retweets": { "type": "integer" }
            }
          }
        },
        "sentimentAnalysis": { "type": "string" }
      }
    },
    "payment": {
      "type": "object",
      "required": ["chain", "txHash", "amount", "verified"],
      "properties": {
        "chain": { "type": "string" },
        "txHash": { "type": "string" },
        "amount": { "type": "number" },
        "verified": { "type": "boolean" }
      }
    },
    "timestamp": { "type": "string", "format": "date-time" }
  }
}
